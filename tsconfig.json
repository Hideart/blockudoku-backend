{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*",
        "*.d.ts"
    ],
    "exclude": [
        "/node_modules/*"
    ]
}
